---
import { Image } from 'astro:assets';
export interface FeatureProps {
  image: {
    src: ImageMetadata;
    alt: string;
  };
  heading: string;
  text: string;
  url: string;
}

const { image, heading, text, url } = Astro.props;
---
<div class="feature">
  <a href={url} class="image-container">
    <Image 
      src={image.src} 
      alt={image.alt}
      width={350}
      height={350}
    />
  </a>
  <h3>{heading}</h3>
  <p>{text}</p>
  <a href={url} class="button">Check It Out!</a>
</div>

<style>
  .feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2rem;
    background-color: #fff;
    border-radius: 1rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .feature:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .image-container {
    width: 100%;
    margin-bottom: 1.5rem;
  }

  .feature img {
    width: 100%;
    height: auto;
    max-width: 350px;
    aspect-ratio: 1 / 1;
    object-fit: contain;
  }

  .feature h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .feature p {
    font-size: 1rem;
    margin-bottom: 1.5rem;
    color: #666;
    line-height: 1.6;
  }


</style>


